@page "/mentordetails/{id}"
@inject MentorsDetailsBase

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">

                <h1>@Mentors.FirstName  @Mentors.LastName </h1>

            </div>
            <div class="card-body text-center"></div>

            <ima dclass="card-img-top" src="@Mentors.PhotoPath" />

            <h4>Mentors ID: @Mentors.MentorsId</h4>

            <h4>Mentors ID: @Mentors.Email</h4>

            <h4>Mentors ID: @Mentors.Username</h4>



            <div>
                <div class="card-footer text-center">
                    <a href="/" class="btn btn-primary">Back</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>

        </div>

    </div>

</div>
